<UserControl x:Class="Quiz.Views.HardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz.Views"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Quiz" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" 
                   FontSize="40" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="5,8,5,8"/>

        <TextBox x:Name="txtQuestion"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 VerticalContentAlignment="Center"
                 Margin="5,8,5,8" />

        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="2" Margin="5,8,5,8">
            <CheckBox x:Name="btnEasy1"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5,8,5,8"/>

            <CheckBox x:Name="btnEasy2"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5,8,5,8"/>

            <CheckBox x:Name="btnEasy3"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5,8,5,8"/>

            <CheckBox x:Name="btnEasy4"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5,8,5,8"/>
        </StackPanel>

        <Button x:Name="btnEasyNext"
                Content="Next"
                Command="{Binding ButtonNext}"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                Margin="5,8,5,8" 
                Width="250"/>
    </Grid>
</UserControl>
